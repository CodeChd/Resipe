<%- layout('layouts/boilerplate') %>

<div class="p-32 flex justify-center overflow-hidden">

  <div class="rounded-lg p-4 max-w-[500px] ">
        <img src="<%= recipes.image %>" alt="" />
      <h1><%= recipes.name %></h1>
      <p>
        <% recipes.ingredients %>
      </p>
      <p><%= recipes.instructions %> </p>
      <p><%= recipes.cookingTime %></p>
      <p><%= recipes.source %></p>
      <p>
        <%= recipes.tags %>
      </p>

<br>
<a href="/">All recipes</a>
<a href="/recipe/<%= recipes.id %>/edit">Edit Recipe</a>
<form action="/recipe/<%= recipes.id %>?_method=DELETE" method="post">
<button class="p-2 bg-red-700">Delete recipe</button></form>

  </div>

  
</div>
